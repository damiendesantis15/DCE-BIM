<Window x:Class="DCEabout.DataExchangeForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DCEabout"
             mc:Ignorable="d" 
             d:DesignHeight="420" MaxHeight="420" d:DesignWidth="500" MaxWidth="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" >
    <Border Padding="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="130"/>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <TextBlock Text="Select all data exchange that applies." Margin="0 10 0 10" FontSize="14" FontWeight="Bold" />
                <CheckBox Name= "etabs" Content="CSI Etabs (specify version in email)" Margin="0 0 0 10"/>
                <CheckBox Name= "safe" Content="CSI Safe (specify version in email)" Margin="0 0 0 10"/>
                <CheckBox Name= "ram" Content="Ram Structures" Margin="0 0 0 10"/>
                <CheckBox Name= "robot" Content="Robot Structural Analysis" Margin="0 0 0 10"/>
                <CheckBox Name= "risa" Content="Risa" Margin="0 0 0 10"/>
                <CheckBox Name= "tekla" Content="Tekla - (Dowco integrated process)" Margin="0 0 0 10"/>
                <CheckBox Name= "ifc" Content="IFC - (specify version in email or ref BEP)"/>
                <TextBlock Text="After selecting your application of choice and email will be created using the project number and project name from your active project which you may modify. This email you must send to the BIM department." TextWrapping="Wrap" Margin="0 100" FontStyle="Italic" FontSize="14"  />
            </StackPanel>
            <StackPanel Grid.Column="1">
                <Button x:Name="OkButton" Content="OK" Click="OkButton_Click" FontSize="14" HorizontalAlignment="Center" Width="100" Height="30" Margin="0 0 0 20" />
                <Button  x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" FontSize="14" HorizontalAlignment="Center" Width="100" Height="30"/>
                <Image Source="Images/DCELogoVertical2.PNG" Visibility="Visible" Opacity="100" Stretch="Uniform" Height="280"/>
            </StackPanel>
        </Grid>       
    </Border>
</Window>
